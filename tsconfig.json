{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@background/*": ["src/background/*"],
      "@ui/*": ["src/ui/*"],
      "@content/*": ["src/content/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*"]
}

